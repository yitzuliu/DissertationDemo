{
  "model_name": "SmolVLM",
  "model_id": "smolvlm",
  "model_path": "ggml-org/SmolVLM-500M-Instruct-GGUF",
  "device": "auto",
  "server": {
    "command": "llama-server",
    "args": [
      "-hf",
      "ggml-org/SmolVLM-500M-Instruct-GGUF",
      "-ngl",
      "99",
      "--port",
      "8080"
    ],
    "port": 8080,
    "health_endpoint": "/health"
  },
  "image_processing": {
    "size": [
      1024,
      1024
    ],
    "min_size": 512,
    "preserve_aspect_ratio": true,
    "advanced_color": {
      "enabled": true,
      "lab_enhancement": true,
      "l_channel_boost": 1.2,
      "ab_channel_boost": 1.2
    },
    "adaptive_enhancement": {
      "enabled": true,
      "auto_contrast": true,
      "dark_boost": 1.4,
      "light_boost": 1.2
    },
    "hdr_simulation": {
      "enabled": true,
      "strength": 0.5,
      "under_exposure": 0.7,
      "over_exposure": 1.3
    },
    "format": "jpeg",
    "jpeg_quality": 95,
    "progressive": true,
    "optimize": true,
    "subsampling": "4:4:4"
  },
  "api": {
    "endpoint": "/v1/chat/completions",
    "timeout": 60,
    "max_tokens": 512
  },
  "ui": {
    "default_instruction": "You are an AI Manual Assistant. Analyze this image and provide step-by-step guidance for the task at hand. Focus on what you can see and give practical, actionable instructions.",
    "capture_intervals": [
      500,
      1000,
      2000,
      5000
    ],
    "default_interval": 2000
  },
  "memory": {
    "max_previous_scenes": 10,
    "max_context_history": 3
  },
  "version": "1.0.0",
  "description": "SmolVLM 500M Instruct model configuration for unified vision system with enhanced image quality.",
  "testing_note": "High-quality image processing configuration optimized for detailed visual analysis."
}